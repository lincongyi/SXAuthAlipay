{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "types": ["vite/client", "node"],
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "@images/*": ["src/assets"]
    }
  },
  "include": [
    "src/**/*.ts",
    "types/*.d.ts",
    "src/**/*.vue",
    "./auto-import.d.ts"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
